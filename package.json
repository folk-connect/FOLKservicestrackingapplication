{
  "name": "electron-tracker",
  "version": "1.0.1",
  "description": "Cross-platform employee activity tracker",
  "author": "FOLK Exclusive",
  "main": "main.js",
  "productName": "Employee Tracker",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "active-win": "^8.1.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "electron-auto-launch": "^5.0.7",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "electron": "28.3.3",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "Folk services tracker app",
    "productName": "Services Tracker",
    "win":{
      "target": [
        "nsis"
      ]
    },
    "directories": {
      "output": "dist"
    },
    "npmRebuild": false,
    "publish": [
      {
        "provider": "github",
        "owner": "folk-connect",
        "repo": "Employee_tracking"
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/app.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/app.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets",
      "category": "Utility"
    }
  }
}
