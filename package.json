{
  "name": "electron-tracker",
  "version": "1.0.1",
  "description": "Cross-platform employee activity tracker",
  "author": "Your Company",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.company.tracker",
    "productName": "Employee Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "npmRebuild": false,
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    }
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "active-win": "^8.1.0",
    "axios": "^1.6.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3"
  }
}
